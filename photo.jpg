<!DOCTYPE html>
<html lang="kk">
<head>
  <meta charset="UTF-8" />
  <title>Тойға шақыру</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background: #fff;
      color: #333;
    }
    #media {
      width: 100%;
      max-width: 800px;
      margin: auto;
      padding: 20px;
      text-align: center;
    }
    #media img {
      width: 100%;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }
    #media audio {
      width: 100%;
      margin-top: 20px;
    }
    #timer {
      text-align: center;
      font-size: 2rem;
      margin-top: 20px;
      font-weight: bold;
    }
    .rsvp {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin: 30px;
    }
    .rsvp button {
      padding: 12px 24px;
      font-size: 1.1rem;
      cursor: pointer;
      background-color: #f1c40f;
      border: none;
      border-radius: 10px;
      transition: 0.3s;
    }
    .rsvp button:hover {
      background-color: #d4ac0d;
      color: white;
    }
    #whatsapp {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: #25D366;
      color: white;
      padding: 12px 24px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }
    #counter {
      text-align: center;
      font-size: 1.3rem;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div id="media">
    <h1>Біздің тойымызға шақырамыз!</h1>
    <img src="photo.jpg" alt="Той фото" />
    <audio src="music.mp3" autoplay loop controls></audio>
  </div>

  <div id="timer">Уақыт есептелуде...</div>

  <div class="rsvp">
    <button onclick="rsvp('yes')">✅ Барам</button>
    <button onclick="rsvp('no')">❌ Бармаймын</button>
  </div>

  <div id="counter">
    Қатысушылар саны: <span id="count">0</span>
  </div>

  <a id="whatsapp" href="https://wa.me/77079361770" target="_blank">
    WhatsApp: 8 707 936 1770
  </a>

  <script>
    const eventDate = new Date('2025-08-10T18:00:00');
    function updateTimer() {
      const now = new Date();
      const diff = eventDate - now;
      if (diff < 0) {
        document.getElementById('timer').textContent = 'Той басталды!';
        clearInterval(interval);
        return;
      }
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
      const mins = Math.floor((diff / (1000 * 60)) % 60);
      const secs = Math.floor((diff / 1000) % 60);
      document.getElementById('timer').textContent = `${days} күн ${hours} сағат ${mins} мин ${secs} сек`;
    }

    const interval = setInterval(updateTimer, 1000);
    updateTimer();

    let count = 0;
    let hasResponded = false;

    function rsvp(answer) {
      if (hasResponded) {
        alert('Сіз бұрын жауап беріп қойдыңыз!');
        return;
      }

      if (answer === 'yes') {
        count++;
        document.getElementById('count').textContent = count;
        alert('Сіз "Барам" деп жауап бердіңіз!');
      } else {
        alert('Сіз "Бармаймын" деп жауап бердіңіз!');
      }

      hasResponded = true;
      document.querySelectorAll('.rsvp button').forEach(btn => btn.disabled = true);
    }
  </script>

</body>
</html>
